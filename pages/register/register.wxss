/* 基础样式 */
.container {
  min-height: 100vh;
  background-color: #F5F5F5;
  font-family: 'PingFang SC', 'SF Pro Display', sans-serif;
  transition: background-color 0.3s;
}

/* 深色模式 */
.container.dark-mode {
  background-color: #1A1A1A;
}

/* 顶部导航 */
.header {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 30rpx 20rpx;
}

.header-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #FFFFFF;
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.container.dark-mode .header-btn {
  background-color: #2C2C2C;
}

/* 主内容区 */
.main-content {
  padding: 0 30rpx 60rpx;
}

/* 标题区域 */
.title-section {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  display: block;
  margin-bottom: 15rpx;
}

.container.dark-mode .title {
  color: #FFFFFF;
}

.subtitle {
  font-size: 26rpx;
  color: #666666;
}

.container.dark-mode .subtitle {
  color: #AAAAAA;
}

/* 表单样式 */
.form {
  display: flex;
  flex-direction: column;
  gap: 25rpx;
}

.form-item {
  width: 100%;
}

.input-wrapper {
  position: relative;
  background-color: #FFFFFF;
  border: 1px solid #EEEEEE;
  border-radius: 20rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.container.dark-mode .input-wrapper {
  background-color: #2C2C2C;
  border-color: #3D3D3D;
}

.input-icon {
  margin-right: 20rpx;
}

.input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333333;
}

.container.dark-mode .input {
  color: #FFFFFF;
}

.placeholder {
  color: #AAAAAA;
  font-size: 28rpx;
}

.toggle-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  right: 15rpx;
  top: 50%;
  transform: translateY(-50%);
}

/* 验证码区域 */
.verification-wrapper {
  display: flex;
  gap: 20rpx;
}

.verification-btn {
  min-width: 200rpx;
  height: 100rpx;
  background-color: #E6F0FF;
  color: #7CB3F7;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.container.dark-mode .verification-btn {
  background-color: rgba(90, 152, 230, 0.2);
}

.verification-btn:disabled {
  opacity: 0.7;
}

/* 注册按钮 */
.register-btn {
  width: 100%;
  height: 108rpx;
  background-color: #7CB3F7;
  color: #FFFFFF;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(124, 179, 247, 0.3);
}

.container.dark-mode .register-btn {
  background-color: #5A98E6;
  box-shadow: 0 4rpx 12rpx rgba(90, 152, 230, 0.3);
}

/* 已有账号 */
.login-link {
  text-align: center;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.login-text {
  font-size: 26rpx;
  color: #666666;
}

.container.dark-mode .login-text {
  color: #AAAAAA;
}

.login-navigator {
  font-size: 26rpx;
  color: #7CB3F7;
  font-weight: 500;
}

/* 其他注册方式 */
.other-methods {
  margin-top: 80rpx;
}

.method-text {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 30rpx;
}

.container.dark-mode .method-text {
  color: #666666;
}

.method-icons {
  display: flex;
  justify-content: center;
  gap: 60rpx;
}

.method-btn {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wechat-btn {
  background-color: #E6FFEE;
}

.container.dark-mode .wechat-btn {
  background-color: rgba(7, 193, 96, 0.2);
}

.qq-btn {
  background-color: #E6F0FF;
}

.container.dark-mode .qq-btn {
  background-color: rgba(18, 183, 245, 0.2);
}

.apple-btn {
  background-color: #FFF0E6;
}

.container.dark-mode .apple-btn {
  background-color: rgba(255, 255, 255, 0.1);
}

.container.dark-mode .apple-icon {
  color: #FFFFFF;
}

/* 按钮点击效果 */
.method-btn::after, .header-btn::after, .toggle-btn::after, .verification-btn::after {
  border: none;
}

.register-btn::after {
  border: none;
}

/* 动画效果 */
.method-btn, .header-btn, .register-btn, .verification-btn {
  transition: all 0.3s;
}

.method-btn:active, .header-btn:active, .verification-btn:active {
  transform: scale(0.95);
}

.register-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(124, 179, 247, 0.3);
}

.container.dark-mode .register-btn:active {
  box-shadow: 0 2rpx 8rpx rgba(90, 152, 230, 0.3);
}
