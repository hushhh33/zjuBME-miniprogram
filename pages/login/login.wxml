<view class="container {{isDarkMode ? 'dark' : ''}}">
  <button class="theme-toggle" bindtap="toggleTheme">
    <i class="icon-moon-o" wx:if="{{!isDarkMode}}"></i>
    <i class="icon-sun-o" wx:if="{{isDarkMode}}"></i>
  </button>

  <view class="title-section">
    <text class="app-title">康复助手</text>
    <text class="app-desc">膝关节术后康复管理平台</text>
  </view>

  <form class="login-form">
    <!-- 账号输入 -->
    <view class="input-group">
      <i class="icon-user-o input-icon"></i>
      <input 
        type="text" 
        placeholder="账号/手机号" 
        value="{{username}}"
        bindinput="handleInput"
        data-field="username"
        class="form-input"
      />
    </view>

    <!-- 密码输入 -->
    <view class="input-group">
      <i class="icon-lock input-icon"></i>
      <input 
        type="{{showPassword ? 'text' : 'password'}}" 
        placeholder="密码" 
        value="{{password}}"
        bindinput="handleInput"
        data-field="password"
        class="form-input"
      />
      <button 
        type="button" 
        bindtap="togglePassword"
        class="toggle-password"
      >
        <i class="{{showPassword ? 'icon-eye-o' : 'icon-eye-slash-o'}}"></i>
      </button>
    </view>

    <navigator url="/pages/forgot-password/forgot-password" class="forgot-password">
      忘记密码?
    </navigator>

    <view class="remember-container">
      <checkbox 
        value="remember" 
        checked="{{rememberMe}}"
        bindchange="toggleRemember"
        class="remember-checkbox"
      />
      <text class="remember-text">记住账号</text>
    </view>

    <button 
      bindtap="handleLogin" 
      class="login-btn"
      disabled="{{!username || !password || loading}}"
      loading="{{loading}}"
    >
      登录
    </button>

    <button 
      bindtap="loginWithWechat" 
      class="wechat-login-btn"
    >
      <icon type="success" size="20" color="#fff" class="wechat-icon"></icon>
      微信快捷登录
    </button>

    <view class="register-container">
      <text class="register-text">还没有账号? </text>
      <navigator url="/pages/register/register" class="register-link">
        立即注册
      </navigator>
    </view>
  </form>

  <view class="footer">
    <text class="copyright">© 2024 康复助手 版权所有</text>
  </view>
</view>