/* 全局样式 */
.container {
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', sans-serif;
  background-color: #f5f5f7;
  min-height: 100vh;
  color: #333333;
}

/* 顶部导航 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 14px 16px;
  background-color: white;
  border-bottom: 1px solid #eee;
}

.header-left {
  display: flex;
  align-items: center;
}

.back-btn {
  padding: 5px;
  margin-right: 12px;
}

.title {
  font-size: 18px;
  font-weight: bold;
}

.header-right {
  display: flex;
}

.icon-btn {
  padding: 5px;
  margin-left: 12px;
}

/* 主内容区 */
.main-content {
  padding: 20px 16px;
}

/* 进度指示器 */
.progress-container {
  display: flex;
  align-items: center;
  margin-bottom: 24px;
}

.progress-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33.333%;
}

.progress-circle {
  width: 28px;
  height: 28px;
  border-radius: 50%;
  background-color: #e5e5e5;
  color: #999999;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  font-weight: bold;
  margin-bottom: 6px;
}

.progress-circle.active {
  background-color: #1677FF;
  color: white;
}

.progress-text {
  font-size: 12px;
  color: #999999;
}

.progress-text.active {
  color: #1677FF;
  font-weight: 500;
}

.progress-line {
  flex: 1;
  height: 2px;
  background-color: #e5e5e5;
}

.progress-line.active {
  background-color: #1677FF;
}

/* 表单容器 */
.form-container {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

/* 表单卡片 */
.form-card {
  background-color: white;
  border-radius: 12px;
  padding: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.form-card:hover {
  box-shadow: 0 4px 14px rgba(0, 0, 0, 0.1);
}

/* 卡片标题 */
.card-title {
  display: flex;
  align-items: center;
  margin-bottom: 16px;
}

.title-icon {
  margin-right: 8px;
}

.title-text {
  font-size: 16px;
  font-weight: bold;
}

/* 表单网格 */
.form-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16px;
  margin-bottom: 16px;
}

/* 表单项目 */
.form-item {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.form-label {
  font-size: 14px;
  color: #666666;
}

.form-input {
  height: 44px;
  padding: 0 12px;
  border: 1px solid #e5e5e5;
  border-radius: 8px;
  font-size: 14px;
}

.form-input:focus {
  border-color: #1677FF;
  outline: none;
  box-shadow: 0 0 0 1px rgba(22, 119, 255, 0.2);
}

.form-input:disabled {
  background-color: #f5f5f5;
  color: #999999;
}

/* 单选框组 */
.radio-group {
  display: flex;
  gap: 20px;
  padding-top: 8px;
}

.radio-item {
  display: flex;
  align-items: center;
  gap: 6px;
  color: #666666;
}

/* 复选框组 */
.checkbox-group {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
  margin-top: 8px;
}

.checkbox-item {
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 8px 12px;
  border: 1px solid #e5e5e5;
  border-radius: 8px;
  color: #666666;
  background-color: white;
}

.checkbox-item:hover {
  background-color: #f5f5f5;
}

/* 表单区块 */
.form-section {
  margin-bottom: 16px;
  display: flex;
  flex-direction: column;
  gap: 6px;
}

/* 文本域 */
.form-textarea {
  min-height: 80px;
  padding: 12px;
  border: 1px solid #e5e5e5;
  border-radius: 8px;
  font-size: 14px;
  line-height: 1.5;
}

.form-textarea:focus {
  border-color: #1677FF;
  outline: none;
  box-shadow: 0 0 0 1px rgba(22, 119, 255, 0.2);
}

/* 选择器样式 */
.form-picker {
  height: 44px;
  border: 1px solid #e5e5e5;
  border-radius: 8px;
  overflow: hidden;
}

.picker-view {
  height: 100%;
  display: flex;
  align-items: center;
  padding: 0 12px;
  font-size: 14px;
  color: #333333;
}

/* 三级网格 */
.grid-3 {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 12px;
  margin-top: 8px;
}

.form-subitem {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.sub-label {
  font-size: 12px;
  color: #999999;
}

/* 行内布局 */
.flex-row {
  display: flex;
  align-items: center;
}

.flex-1 {
  flex: 1;
}

.divider {
  padding: 0 8px;
  color: #999999;
}

.rounded-l {
  border-radius: 8px 0 0 8px;
  border-right: none;
}

.rounded-r {
  border-radius: 0 8px 8px 0;
}

/* 按钮组 */
.button-group {
  display: flex;
  gap: 16px;
  margin-top: 16px;
}

.btn-primary {
  flex: 1;
  height: 48px;
  background-color: #1677FF;
  color: white;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 500;
  transition: all 0.3s ease;
}

.btn-primary:hover {
  background-color: rgba(22, 119, 255, 0.9);
}

.btn-primary:active {
  transform: scale(0.98);
}

.btn-secondary {
  flex: 1;
  height: 48px;
  background-color: white;
  color: #666666;
  border: 1px solid #e5e5e5;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 500;
  transition: all 0.3s ease;
}

.btn-secondary:hover {
  background-color: #f5f5f5;
}

.btn-secondary:active {
  transform: scale(0.98);
}

/* 适配小屏幕 */
@media (max-width: 375px) {
  .form-grid {
    grid-template-columns: 1fr;
  }
  
  .grid-3 {
    grid-template-columns: 1fr;
  }
}