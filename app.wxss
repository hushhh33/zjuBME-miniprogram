/* 全局样式 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Helvetica Neue', Arial, sans-serif;
  background-color: #F5F5F7;
  color: #1D1D1F;
  min-height: 100%;
}

/* 颜色变量 */
:root {
  --primary: #4A90E2;      /* 淡蓝主色 */
  --secondary: #4CD964;    /* 淡绿 */
  --pain: #FF6B6B;         /* 淡粉/红 */
  --swelling: #FFB86C;     /* 淡橙 */
  --function: #9D4EDD;     /* 淡紫 */
  --gray-light: #F5F5F7;
  --gray-medium: #E5E5EA;
  --gray-dark: #6E6E73;
  --white: #FFFFFF;
  --black: #1D1D1F;
}

/* 工具类 */
.container {
  padding: 20rpx;
  min-height: 100vh;
}

.section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  display: block;
  color: var(--black);
}

.card {
  background-color: var(--white);
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.card-shadow {
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
  transition: box-shadow 0.2s;
}

.card-shadow:hover {
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.12);
}

.btn {
  display: block;
  width: 100%;
  padding: 24rpx;
  border-radius: 24rpx;
  font-size: 30rpx;
  font-weight: 500;
  text-align: center;
  margin-top: 20rpx;
  transition: all 0.2s;
  border: none;
}

.btn-primary {
  background-color: var(--primary);
  color: white;
}

.btn-primary:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.btn-secondary {
  background-color: var(--secondary);
  color: white;
}

.btn-secondary:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.btn-pain {
  background-color: var(--pain);
  color: white;
}

.btn-pain:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.btn-swelling {
  background-color: var(--swelling);
  color: white;
}

.btn-swelling:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.btn-function {
  background-color: var(--function);
  color: white;
}

.btn-function:active {
  opacity: 0.9;
  transform: scale(0.98);
}

/* 表单元素样式 */
.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 30rpx;
  margin-bottom: 12rpx;
  color: var(--black);
  font-weight: 500;
}

.form-input {
  width: 100%;
  padding: 24rpx;
  border: 1rpx solid var(--gray-medium);
  border-radius: 16rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.form-input:focus {
  outline: none;
  border-color: var(--primary);
}

/* 进度条样式 */
.progress-bar {
  height: 16rpx;
  background-color: var(--gray-medium);
  border-radius: 8rpx;
  overflow: hidden;
  margin: 16rpx 0;
}

.progress-fill {
  height: 100%;
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

/* 标签页样式 */
.tabs {
  display: flex;
  overflow-x: auto;
  padding-bottom: 16rpx;
  margin-bottom: 20rpx;
  white-space: nowrap;
  background: white;
  border-radius: 16rpx;
  padding: 0 20rpx;
}

.tab {
  padding: 16rpx 32rpx;
  margin-right: 16rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: var(--gray-dark);
  background-color: var(--gray-light);
  transition: all 0.2s ease;
  white-space: nowrap;
}

.tab.active {
  color: var(--white);
  background-color: var(--primary);
}

.tab:last-child {
  margin-right: 0;
}

/* 页面标题样式 */
.page-header {
  margin-bottom: 30rpx;
  text-align: center;
}

.header-title {
  font-size: 44rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.header-desc {
  font-size: 28rpx;
  color: #6e6e73;
  display: block;
}

/* 网格布局 */
.grid-2 {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.grid-3 {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 20rpx;
}

.grid-4 {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr;
  gap: 20rpx;
}

/* 弹性布局 */
.flex {
  display: flex;
}

.flex-col {
  flex-direction: column;
}

.flex-row {
  flex-direction: row;
}

.items-center {
  align-items: center;
}

.justify-center {
  justify-content: center;
}

.justify-between {
  justify-content: space-between;
}

.flex-1 {
  flex: 1;
}

/* 间距工具类 */
.mt-1 { margin-top: 8rpx; }
.mt-2 { margin-top: 16rpx; }
.mt-3 { margin-top: 24rpx; }
.mt-4 { margin-top: 32rpx; }
.mt-5 { margin-top: 40rpx; }

.mb-1 { margin-bottom: 8rpx; }
.mb-2 { margin-bottom: 16rpx; }
.mb-3 { margin-bottom: 24rpx; }
.mb-4 { margin-bottom: 32rpx; }
.mb-5 { margin-bottom: 40rpx; }

.ml-1 { margin-left: 8rpx; }
.ml-2 { margin-left: 16rpx; }
.ml-3 { margin-left: 24rpx; }

.mr-1 { margin-right: 8rpx; }
.mr-2 { margin-right: 16rpx; }
.mr-3 { margin-right: 24rpx; }

.p-1 { padding: 8rpx; }
.p-2 { padding: 16rpx; }
.p-3 { padding: 24rpx; }
.p-4 { padding: 32rpx; }
.p-5 { padding: 40rpx; }

/* 文本样式 */
.text-center { text-align: center; }
.text-left { text-align: left; }
.text-right { text-align: right; }

.text-sm { font-size: 24rpx; }
.text-base { font-size: 28rpx; }
.text-lg { font-size: 32rpx; }
.text-xl { font-size: 36rpx; }
.text-2xl { font-size: 44rpx; }

.font-normal { font-weight: 400; }
.font-medium { font-weight: 500; }
.font-semibold { font-weight: 600; }
.font-bold { font-weight: 700; }

.text-primary { color: var(--primary); }
.text-secondary { color: var(--secondary); }
.text-pain { color: var(--pain); }
.text-swelling { color: var(--swelling); }
.text-function { color: var(--function); }
.text-gray { color: var(--gray-dark); }

/* 圆角工具类 */
.rounded-sm { border-radius: 8rpx; }
.rounded { border-radius: 16rpx; }
.rounded-lg { border-radius: 24rpx; }
.rounded-xl { border-radius: 32rpx; }
.rounded-full { border-radius: 50%; }

/* 阴影工具类 */
.shadow-sm { box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1); }
.shadow { box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1); }
.shadow-lg { box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.15); }

/* 响应式设计 */
@media (max-width: 750rpx) {
  .grid-2,
  .grid-3,
  .grid-4 {
    grid-template-columns: 1fr;
  }
  
  .container {
    padding: 16rpx;
  }
  
  .card {
    padding: 20rpx;
  }
}
